# SentinelAI Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/cybercare
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cybercare

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# VIRUSTOTAL (Optional)
# ===========================================
# Get your FREE API key from: https://www.virustotal.com/gui/my-apikey
# Enables hash/URL/IP/domain reputation lookups
VIRUSTOTAL_API_KEY=

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Secret key for JWT tokens (generate a random string for production)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode (set to false in production)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# ===========================================
# AUTO-RESPONSE SETTINGS
# ===========================================
# Enable automatic threat response
AUTO_RESPONSE_ENABLED=true

# Minimum severity to trigger auto-response (LOW, MEDIUM, HIGH)
AUTO_RESPONSE_THRESHOLD=HIGH

# Automatically block malicious IPs
AUTO_BLOCK_IPS=true

# Cooldown period in minutes before re-blocking same IP
AUTO_RESPONSE_COOLDOWN=5

# Dry run mode - log actions but don't execute
AUTO_RESPONSE_DRY_RUN=false

# Whitelisted IPs (comma-separated) - never auto-block these
AUTO_RESPONSE_WHITELIST=127.0.0.1,192.168.1.1

# ===========================================
# REMEDIATION SETTINGS
# ===========================================
# Set to "true" to execute firewall commands (requires admin/root)
ENABLE_REAL_EXECUTION=true

# Directory for remediation logs
REMEDIATION_LOG_DIR=/var/log/sentinelai

# ===========================================
# WINDOWS AGENT SETTINGS
# ===========================================
# Dashboard URL for Windows Agent to connect to
SENTINEL_DASHBOARD_URL=http://localhost:8015

# Agent heartbeat interval (seconds)
AGENT_HEARTBEAT_INTERVAL=30
