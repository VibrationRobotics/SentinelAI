# SentinelAI Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://sentinel:sentinel_password@db:5432/sentinel_db
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=sentinel_password
POSTGRES_DB=sentinel_db

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# OPENAI / GPT-4 CONFIGURATION
# ===========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# ===========================================
# AZURE AI SERVICES (Optional)
# ===========================================
# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Azure Anomaly Detector
AZURE_ANOMALY_DETECTOR_ENDPOINT=https://your-anomaly-detector.cognitiveservices.azure.com/
AZURE_ANOMALY_DETECTOR_KEY=your-anomaly-detector-key

# Azure Content Safety
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/
AZURE_CONTENT_SAFETY_KEY=your-content-safety-key

# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY=your-search-key
AZURE_SEARCH_INDEX=threats

# ===========================================
# VIRUSTOTAL (Optional)
# ===========================================
# Get your API key from: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Debug mode (set to false in production)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Dashboard port
DASHBOARD_PORT=8015

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Secret key for session encryption (generate a random string)
SECRET_KEY=your-secret-key-here-change-this

# Auto-response settings
AUTO_RESPONSE_ENABLED=true
AUTO_RESPONSE_THRESHOLD=HIGH
AUTO_RESPONSE_COOLDOWN=300

# ===========================================
# WINDOWS AGENT SETTINGS
# ===========================================
# Dashboard URL for Windows Agent to connect to
SENTINEL_DASHBOARD_URL=http://localhost:8015

# Agent heartbeat interval (seconds)
AGENT_HEARTBEAT_INTERVAL=30
